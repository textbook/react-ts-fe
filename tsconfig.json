{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "e2e/",
    "node_modules/",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
